# Big Data Notebook: PySpark example
!pip install pyspark --quiet

from pyspark.sql import SparkSession
spark = SparkSession.builder.appName("MegaDataProject").getOrCreate()

# Load datasets into Spark
taxi_sdf = spark.read.option("header", True).csv(taxi_url)
retail_sdf = spark.read.option("header", True).csv(retail_url)

# Clean columns
for df in [taxi_sdf, retail_sdf]:
    for col in df.columns:
        df = df.withColumnRenamed(col, col.strip().lower().replace(" ", "_"))

# Example transformation: sum passengers per month
from pyspark.sql.functions import col, sum as spark_sum

taxi_sdf = taxi_sdf.withColumn("total_passengers", sum([col(c) for c in taxi_sdf.columns[1:]]))
taxi_sdf.groupBy("month").agg(spark_sum("total_passengers").alias("total_passengers")).show()

# Sample retail data
retail_sdf.show(5)
