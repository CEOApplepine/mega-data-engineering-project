import streamlit as st
import pandas as pd

# Load data
taxi_df = pd.read_csv(taxi_url)
taxi_df.columns = [c.strip().lower().replace(" ", "_") for c in taxi_df.columns]
taxi_df["total_passengers"] = taxi_df.iloc[:, 1:].sum(axis=1)

# Streamlit dashboard
st.title("Mega Data Engineering Dashboard")

st.subheader("Taxi Data")
month_filter = st.selectbox("Select Month", ["All"] + list(taxi_df["month"].unique()))
if month_filter != "All":
    df_display = taxi_df[taxi_df["month"] == month_filter]
else:
    df_display = taxi_df
st.dataframe(df_display)

st.subheader("Total Passengers")
st.bar_chart(df_display.set_index("month")["total_passengers"])
