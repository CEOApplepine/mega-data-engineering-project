from pyspark.sql import SparkSession
from pyspark.sql.functions import col

# Initialize Spark
spark = SparkSession.builder.appName("StreamingSimulation").getOrCreate()

# Simulate streaming by reading CSV in chunks from URL
taxi_url = "https://people.sc.fsu.edu/~jburkardt/data/csv/airtravel.csv"

# Read CSV as DataFrame
df = spark.read.option("header", True).csv(taxi_url)

# Example processing: convert month columns to integers
for month in df.columns[1:]:
    df = df.withColumn(month, col(month).cast("int"))

# Show sum of each month as streaming-like output
monthly_sums = df.groupBy().sum(*df.columns[1:])
monthly_sums.show()
